@using WebShobGleb.Models
@using WebShobGleb.Halpers
@model OrderVM

<form method="post">
	<div class="row">
		<div class="col-6">
			<table class="table">
				<tr>
					<td>Дата и время</td>
					<td>@Model.CreateDataTime.ToString("g")</td>
				</tr>
				<tr>
					<td>Адрес доставки</td>
					<td>@Model.Address</td>
				</tr>
				<tr>
					<td>Получатель</td>
					<td>@Model.Name</td>
				</tr>
				<tr>
					<td>Телефон</td>
					<td>@Model.Phone</td>
				</tr>
				<tr>
					<td>Сумма заказа</td>
					<td>@Model.Cost</td>
				</tr>
				<tr>
					<td>Статус заказа</td>
					<td>
						<select asp-for="@Model.Status"
								asp-items="@Html.GetEnumSelectList<OrderStatus>()"
								class="form-control " name="orderStatus">
						</select>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<br />
	<button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="Order" asp-action="UpdateOrderStatus" asp-route-orderId="@Model.Id">
		Сохранить изменения
	</button>
</form>