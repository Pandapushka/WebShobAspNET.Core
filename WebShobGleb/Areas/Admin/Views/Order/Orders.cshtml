@using WebShobGleb.Halpers
@using WebShobGleb.Models
@model List<OrderVM>
@{
    int i = 1;
}

<div class="row">
    <!-- Левое меню -->
    <div class="col-lg-3 col-md-4">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>

    <!-- Основной контент -->
    <div class="col-lg-9 col-md-8">
        <h3 class="text-center text-light mb-4">Список заказов</h3>

        <div class="table-responsive">
            <table class="table table-dark table-hover table-borderless">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Сумма</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Дата</th>
                        <th scope="col">Время</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Cost.ToString("C2")</td>
                            <td>@EnumHelper.GetDisplayName(item.Status)</td>
                            <td>@item.CreateDataTime.ToString("d")</td>
                            <td>@item.CreateDataTime.ToString("t")</td>
                            <td>
                                <a class="btn btn-outline-light btn-sm" asp-area="Admin" asp-controller="Order" asp-action="OrderDetails" asp-route-orderId="@item.Id">
                                    <i class="fas fa-info-circle"></i> Подробнее
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>