@model List<ProductVM>

@{
    int i = 1;
}

<div class="row bg-dark text-light p-4 rounded shadow-lg">
    <div class="col-3">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    <div class="col-9">
        <h3 class="text-center text-success">Продукты</h3>
        <br />
        <a class="btn btn-outline-light" asp-area="admin" asp-controller="product" asp-action="add">
            <i class="fas fa-plus me-2"></i>Добавить новый продукт
        </a>
        <div class="row mt-3">
            <div class="col">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Название</th>
                            <th>Цена</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td class="col-3">
                                    <a class="text-decoration-none text-success" asp-area="admin" asp-controller="product" asp-action="index" asp-route-id="@product.Id">
                                        <p>@product.Name</p>
                                    </a>
                                </td>
                                <td class="col-2">@string.Format("{0:### ### ###}", product.Cost) р</td>
                                <td class="col-4 text-end">
                                    <a class="btn btn-outline-light me-2" asp-area="admin" asp-controller="product" asp-action="edit" asp-route-id="@product.Id">
                                        <i class="fas fa-edit me-2"></i>Редактировать
                                    </a>
                                    <a class="btn btn-outline-danger" asp-area="admin" asp-controller="product" asp-action="delete" asp-route-id="@product.Id">
                                        <i class="fas fa-trash-alt me-2"></i>Удалить
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>