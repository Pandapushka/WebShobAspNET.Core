@model ProductVM

@if (Model == null)
{
	<div>Такого товара нет!</div>
}
else
{
	<div class="row">
		<div class="col-6 card">
			<img src="/Image/GetImage/@Model.Id" class="card-img-top" alt="@Model.Name" style="height: 200px; object-fit: cover;">
			<div class="card-body">
				<h5>@Model.Name</h5>
				<h5>@Model.Cost</h5>
				<h5>@Model.Description</h5>
				<a class="btn btn-outline-dark" href="#" role="button">Добавить в корзину</a>
				<a class="btn btn-outline-dark" href="/home/index" role="button">Продолжить покупки</a>
			</div>
		</div>
	</div>
}